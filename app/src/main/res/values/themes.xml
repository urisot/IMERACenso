<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.IMERACenso" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryVariant">@color/dark_primary_color</item>
        <item name="colorOnPrimary">@color/accent_color</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/accent_color_sec</item>
        <item name="colorSecondaryVariant">@color/light_primary_color</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Splash" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <!--<item name="colorPrimary">@color/splash_darck</item>
        <item name="colorPrimaryDark">@color/splash_backgrond</item>-->
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryDark">#FF5722</item>
        <item name="colorAccent">@color/accent_color</item>
    </style>

    <style name="Theme.IMERACenso.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="LogIn" parent="Theme.AppCompat.DayNight.Dialog.MinWidth">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!-- Set AppCompat’s color theming attrs -->
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryDark">@color/dark_primary_color</item>
        <item name="colorAccent">@color/accent_color</item>
        <item name="colorControlActivated">@color/purple_700</item>
        <item name="colorControlHighlight">@color/teal_700</item>
    </style>

    <style name="Theme.IMERACenso.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" >
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryVariant">@color/dark_primary_color</item>
        <item name="colorOnPrimary">@color/accent_color</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/accent_color_sec</item>
        <item name="colorSecondaryVariant">@color/light_primary_color</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.IMERACenso.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.MiTemaD" parent="Theme.AppCompat.Light.Dialog">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!-- Set AppCompat’s color theming attrs -->
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryDark">@color/dark_primary_color</item>
        <item name="colorAccent">@color/accent_color</item>
        <item name="colorControlActivated">@color/accent_color</item>
        <item name="colorControlHighlight">@color/accent_color</item>
    </style>

    <style name="AppCompatAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/accent_color</item>
        <item name="android:textColorPrimary">@color/dark_primary_color</item>
    </style>

    <style name="Widget.Group.Single" parent="@android:style/Widget">
        <item name="android:layout_marginTop">-1dp</item> <!-- Ensures we don't get a 2 dp top stroke -->
        <item name="android:padding">4dp</item>
        <item name="android:background">@drawable/bg_input_group_single</item>
    </style>

    <style name="CircularProgress" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/accent_color</item>
    </style>
</resources>