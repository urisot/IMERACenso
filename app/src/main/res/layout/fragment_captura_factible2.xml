<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.Fragments.CapturaFactible2Fragment">


    <TextView
        android:id="@+id/txt_subtitulo2"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:text="InformaciÃ³n de Material"
        android:textColor="#484848"
        android:drawableLeft="@drawable/ic_label_24"
        android:drawablePadding="8dp"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:gravity="center_vertical"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp"

        android:weightSum="2"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:orientation="vertical"
            android:layout_weight="1"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/darker_gray"
                android:text="Material de Banqueta"
                android:textSize="12sp"
                android:focusable="false"
                />
            <TextView
                android:id="@+id/picker_MaterialBanqueta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Material de Banqueta"
                android:gravity="center_vertical"
                android:textSize="17sp"
                android:focusable="false"
                />
        </LinearLayout>
        <View
            android:layout_height="56dp"
            android:layout_width="8dp"
            />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:orientation="vertical"
            android:layout_weight="1"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/darker_gray"
                android:text="Material Calle"
                android:textSize="12sp"
                android:focusable="false"
                />
            <TextView
                android:id="@+id/picker_MaterialCalle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Material Calle"
                android:gravity="center_vertical"
                android:textSize="17sp"
                android:focusable="false"
                />
        </LinearLayout>
    </LinearLayout>
    <Switch
        android:id="@+id/sw_RegistroBanqueta"
        android:layout_marginTop="8dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="Registro de Banqueta"

        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/txt_ft"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/darker_gray"
            android:text="Factibilidad Tecnica"
            android:textSize="12sp" />
        <Spinner
            android:id="@+id/picker_factibilidadTecnica"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_below="@+id/txt_ft"
            android:layout_toLeftOf="@+id/btn_infoFactibilidadTecnica"
            android:entries="@array/factibilidad_tecnica"
            />
        <Button
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:id="@+id/btn_infoFactibilidadTecnica"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:text="\?"
            android:textColor="@color/white"
            android:visibility="gone"
            />
    </RelativeLayout>

</LinearLayout>