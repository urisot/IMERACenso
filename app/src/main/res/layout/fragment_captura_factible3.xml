<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:weightSum="1"
    tools:context=".ui.Fragments.CapturaFactible3Fragment">

    <TextView
        android:id="@+id/txt_subtitulo2"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:text="Imagenes"
        android:textColor="#484848"
        android:drawableLeft="@drawable/ic_label_24"
        android:drawablePadding="8dp"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:gravity="center_vertical"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/lbl_fpredio"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Foto de Predio"
            android:textSize="14sp"
            />
        <ImageView
            android:layout_below="@+id/lbl_fpredio"
            android:id="@+id/img_fotopredio"
            android:layout_width="250dp"
            android:layout_height="200dp"
            android:layout_centerHorizontal="true"
            android:text="Foto de Predio"
            android:textSize="14sp"
            android:src="@drawable/ic_camera_alt_96"
            android:scaleType="centerInside"
            />
    </RelativeLayout>

    <View
        android:layout_marginTop="8dp"
        android:layout_marginLeft="48dp"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#efefef"/>

    <TextView
        android:id="@+id/txt_subtitulo3"
        android:layout_marginTop="8dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:text="Detalles"
        android:textColor="#484848"
        android:drawableLeft="@drawable/ic_label_24"
        android:drawablePadding="8dp"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:gravity="center_vertical"
        />

    <TextView
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:text="Observaciones"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:inputType="textMultiLine"
        android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz1234567890 "
        />
    <EditText
        android:id="@+id/et_Observaciones"
        style="@style/Widget.Group.Single"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginEnd="20dp"
        android:inputType="textMultiLine"
        android:layout_weight="0.66" />

    <Button
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:id="@+id/btn_Guardar"
        android:layout_width="match_parent"
        android:text="Guardar"
        android:layout_height="56dp"
        android:textColor="@color/white"
        />

</LinearLayout>